#!/usr/bin/env rc

heading -t status
git status -s
git add -N .

if (! git diff --quiet) {
	heading stage
	git add -p
}

if (! git diff --cached --quiet) {
	heading sync
	if (confirm 'commit?') {
		msg=`{prompt 'message' Fixups}
		git commit -m $"msg &&
		if (confirm 'push?')
			git push origin
	}
}

true

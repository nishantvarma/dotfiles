#!/usr/bin/env rc

nl=()
if (~ $1 -n) {
	nl=true
	shift
}

switch ($1) {
case black;   shift; tput setaf 0
case red;     shift; tput setaf 1
case green;   shift; tput setaf 2
case yellow;  shift; tput setaf 3
case blue;    shift; tput setaf 4
case magenta; shift; tput setaf 5
case cyan;    shift; tput setaf 6
case white;   shift; tput setaf 7
}

tput bold
if (~ $nl true) echo -n $*
if not echo $*
tput sgr0

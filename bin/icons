#!/usr/bin/env bash

declare -A icons

icons=(
    [9term.9term]=term.png
    [acme.acme]=editor.png
    [file-manager.File-manager]=file.png
    [gl.mpv]=video.png
    [llpp.llpp]=pdf.png
    [mupdf.MuPDF]=pdf.png
    [urxvt.URxvt]=term.png
    [vimb.Vimb]=term.png
    [xterm.XTerm]=term.png
)

for application in "${!icons[@]}"; do
    for window in $(wmctrl -lx | grep "$application" | awk '{print $1}'); do
        xseticon -id "$window" "$HOME"/.icons/"${icons[$application]}"
    done
done

#!/usr/bin/env rc

file=`{file $1}
mime=`{file -m $1}

echo $pwd

if (~ $1 *.djvu) spawn djview4 $*
if not if (~ $1 *.jpeg) spawn page $*
if not if (~ $1 *.mp3) mocp -l $*
if not if (~ $1 *.mp4) spawn mpv $*
if not if (~ $1 *.pdf) spawn zathura $*
if not if (~ $file *executable*) ./$1
if not if (~ $mime *text*) spawn st vis $*

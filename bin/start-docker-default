#!/usr/bin/env bash

USER=$1

docker run \
    --env DISPLAY=$DISPLAY \
    --interactive \
    --rm \
    --network host \
    --privileged \
    --tty \
    --user "$USER" \
    --volume "$HOME"/.Xauthority:/home/"$USER"/.Xauthority \
    --volume "$HOME":/home/"$USER" \
    --volume /tmp/.X11-unix:/tmp/.X11-unix \
    "${@:2}"

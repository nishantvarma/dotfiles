#!/usr/bin/env bash

synclient \
    CircScrollTrigger=2 \
    CircularScrolling=1 \
    CoastingSpeed=0 \
    EmulateTwoFingerMinW=8 \
    EmulateTwoFingerMinZ=40 \
    FingerHigh=80 \
    FingerLow=50 \
    HorizEdgeScroll=1 \
    HorizTwoFingerScroll=1 \
    MaxTapTime=125 \
    TapButton1=1 \
    TapButton2=3 \
    TapButton3=2 \
    VertEdgeScroll=1 \
    VertTwoFingerScroll=1 &&
xiput set-prop 15 "Synaptics Finger" 50 80 257

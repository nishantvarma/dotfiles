#!/usr/bin/env bash

synclient \
    CircScrollTrigger=2 \
    CircularScrolling=1 \
    CoastingSpeed=0 \
    EmulateTwoFingerMinW=8 \
    EmulateTwoFingerMinZ=40 \
    HorizEdgeScroll=1 \
    HorizTwoFingerScroll=1 \
    MaxTapTime=125 \
    TapButton1=1 \
    TapButton2=3 \
    TapButton3=2 \
    VertEdgeScroll=1 \
    VertTwoFingerScroll=1 &&
id=$(xinput list | grep -i "touchpad" | awk '{print $6}' | cut -d = -f 2) &&
xinput set-prop "$id" "Synaptics Finger" 50 80 257

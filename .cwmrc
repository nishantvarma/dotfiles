borderwidth 2
color activeborder "#080808"
color inactiveborder "#080808"
gap 28 0 0 0
snapdist 4

unbind-key all

bind-key M-d window-hide
bind-key M-i set-icons
bind-key M-k window-close
bind-key M-l window-menu-label
bind-key M-m window-maximize
bind-key M-r restart
bind-key M-t start-terminal
bind-key M-w menu-window
bind-key M-x menu-exec
bind-key M-Tab window-cycle

bind-key C-Tab window-cycle

unbind-mouse all

bind-mouse M-1 window-move
bind-mouse M-2 window-hide
bind-mouse M-3 window-resize

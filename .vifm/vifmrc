" Settings
" ========

autocmd DirEnter Downloads setlocal sort=-mtime

colorscheme Default

set fastrun
set followlinks
set fusehome=/tmp/vifm_fuse
set history=10
set ignorecase
set incsearch
set nohlsearch
set noiec
set norunexec
set notitle
set novimhelp
set scrolloff=4
set slowfs=curlftpfs
set smartcase
set sortnumbers
set sort=+name
set tablabel="%p:t"
set tabprefix=" "
set tabsuffix=" "
set trash
set undolevels=100
set vicmd=vis
set viewcolumns=*{name}
set wildmenu

view

" Commands
" ========

command df df -h %m 2>/dev/null
command diff vim -d %f %F
command FZFFind :let $PICK = term("preview")
              \| if $PICK != ""
              \|     execute "edit" fnameescape($PICK)
              \| endif
command FZFGoto :let $PICK = term("folders")
              \| if $PICK != ""
              \|     execute "goto" fnameescape($PICK)
              \| endif

" Keyboard Mappings
" =================

nmap - gh
nmap E :edit<cr>
nmap O :mkdir<space>
nmap S :sort<cr>
nmap cc cw<c-u>
nmap gb :file &<cr>l
nmap i cw<c-a>
nmap o :touch<space>
nmap q :quit<CR>
nmap s :!spawn st<cr>
nmap w :file<space><tab>
nmap yd :!echo %d | xclip %i<cr>
nmap yf :!echo %c:p | xclip %i<cr>
nmap <c-p> :FZFFind<cr>
nmap <c-s> :FZFGoto<cr>

" Viewer
" ======

fileview * view %c

" Opener
" ======

filetype * open %f

" Bookmarks
" =========

mark d ~/Data
mark h ~
mark n ~/Downloads
mark o ~/opt
mark s ~/src
mark t ~/scratch
mark u ~/Unsynced

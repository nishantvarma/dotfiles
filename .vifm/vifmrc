autocmd DirEnter Downloads setlocal sort=-mtime

colorscheme Default

filetype * open %f
fileview * view %c

nmap ct :tabnew<cr>
nmap e :edit<cr>
nmap ef :!fuzzyedit<cr>
nmap O :mkdir<space>
nmap o :touch<space>
nmap of :!fuzzyopen<cr>
nmap q :quit<cr>
nmap s :!spawn st<cr>

set fastrun
set fusehome=/tmp/vifm_fuse
set history=10
set ignorecase
set incsearch
set mouse=a
set nofollowlinks
set nohlsearch
set noiec
set norunexec
set notitle
set novimhelp
set scrolloff=4
set slowfs=curlftpfs
set smartcase
set sortnumbers
set sort=+name
set tablabel="%p:t"
set tabprefix=" "
set tabsuffix=" "
set trash
set undolevels=100
set vicmd=vis
set viewcolumns=*{name}
set wildmenu

view
